<div class="jumbotron" id="title-jumbo">
  <h1 class="display-4 font-weight-bold" id="grand">Eat-Da-Burger</h1>
  <p class="lead" id="subtitle">They're juicy and delicious! Tell us about your burgers. Devour some burgers.</p>
  <hr class="my-4">
</div>

<div class="container">
  <div class="row">
    {{!-- The list of burgers that are waiting to be devoured --}}
    <div class="col-md-6">
      <h2>Available Burgers</h2>

        <ol id="burgerlist">
          
            {{#each burgers}}
              {{#unless devoured}}
                <div class="card my-3 py-3 px-4">
                  <li>
                    {{burger_name}}
                    <br>
                    <button class="burger-devour btn btn-dark" data-id="{{id}}" data-newdevour="{{devoured}}">
                    Devour!
                    </button>
                  </li>
                </div>
              {{/unless}}
            {{/each}}
        
        </ol>

    </div>
    {{!-- The list of burgers that have been devoured --}}
  
    <div class="col-md-6">
      <ul>
        <li>
          <h2>Devoured Burgers</h2>
          <ol id="burgerlist">
            
              {{#each burgers}}
                {{#if devoured}}
                  <div class="card my-3 py-3 px-4">
                    <li>
                      {{burger_name}}     
                    </li>
                  </div>
                {{/if}}
              {{/each}}
          
          </ol>
        </li>
      </ul>

    </div>

  </div>
</div>

<div class="container bg-light p-2">
    <div class="row">
        <div class="col-md-12">
          <form>
            <div class="form-group">
              <label for="burgertext">Add a Burger!</label>
              <textarea class="form-control" id="burgertext" rows="3" placeholder="Burger Name"></textarea>
            </div>
            <button class="btn btn-primary" id="addburger" type="submit">Add Burger</button>
          </form>
        </div>
    </div>
</div>
